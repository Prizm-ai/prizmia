       let currentTerms = [...glossaryTerms];
       let currentFilter = { search: '', letter: 'all', category: 'all' };
       let viewedTerms = new Set();

       document.addEventListener('DOMContentLoaded', () => {
           renderTerms();
           initEventListeners();
           loadViewedTerms();
           updateStats();
       });

       function initEventListeners() {
           const searchInput = document.getElementById('searchInput');
           const clearBtn = document.getElementById('clearSearch');
           
           searchInput.addEventListener('input', (e) => {
               currentFilter.search = e.target.value.toLowerCase();
               clearBtn.style.display = e.target.value ? 'block' : 'none';
               filterTerms();
           });
           
           clearBtn.addEventListener('click', () => {
               searchInput.value = '';
               currentFilter.search = '';
               clearBtn.style.display = 'none';
               filterTerms();
           });
           
           document.querySelectorAll('.letter-btn').forEach(btn => {
               btn.addEventListener('click', () => {
                   document.querySelectorAll('.letter-btn').forEach(b => b.classList.remove('active'));
                   btn.classList.add('active');
                   currentFilter.letter = btn.dataset.letter;
                   filterTerms();
               });
           });
           
           document.querySelectorAll('.category-btn').forEach(btn => {
               btn.addEventListener('click', () => {
                   document.querySelectorAll('.category-btn').forEach(b => b.classList.remove('active'));
                   btn.classList.add('active');
                   currentFilter.category = btn.dataset.category;
                   filterTerms();
               });
           });
       }

       function filterTerms() {
           currentTerms = glossaryTerms.filter(term => {
               if (currentFilter.search) {
                   const searchMatch = term.term.toLowerCase().includes(currentFilter.search) ||
                                     term.definition.toLowerCase().includes(currentFilter.search);
                   if (!searchMatch) return false;
               }
               
               if (currentFilter.letter !== 'all') {
                   if (!term.term.toUpperCase().startsWith(currentFilter.letter)) return false;
               }
               
               if (currentFilter.category !== 'all') {
                   if (term.category !== currentFilter.category) return false;
               }
               
               return true;
           });
           
           renderTerms();
           updateResultsInfo();
       }

       function renderTerms() {
           const grid = document.getElementById('termsGrid');
           
           if (currentTerms.length === 0) {
               grid.innerHTML = '<p style="grid-column: 1/-1; text-align: center; color: #6b7280;">Aucun terme trouvé</p>';
               return;
           }
           
           grid.innerHTML = currentTerms.map(term => `
               <div class="term-card" onclick="showTermDetail(${term.id})">
                   <h3 class="term-title">${term.term}</h3>
                   <span class="term-category">${getCategoryLabel(term.category)}</span>
                   <p class="term-definition">${term.definition}</p>
                   <div class="term-meta">
                       <div class="difficulty">
                           ${generateDifficulty(term.difficulty || 1)}
                       </div>
                       <span style="color: var(--color-primary); font-size: 0.85rem;">Voir plus →</span>
                   </div>
               </div>
           `).join('');
       }

       function showTermDetail(id) {
           const term = glossaryTerms.find(t => t.id === id);
           if (!term) return;
           
           viewedTerms.add(id);
           saveViewedTerms();
           updateStats();
           
           document.getElementById('modalTitle').textContent = term.term;
           document.getElementById('modalCategory').textContent = getCategoryLabel(term.category);
           document.getElementById('modalDefinition').textContent = term.definition;
           
           const exampleSection = document.getElementById('exampleSection');
           if (term.example) {
               exampleSection.style.display = 'block';
               document.getElementById('modalExample').textContent = term.example;
           } else {
               exampleSection.style.display = 'none';
           }
           
           document.getElementById('termModal').classList.add('active');
       }

       function closeModal() {
           document.getElementById('termModal').classList.remove('active');
       }

       function searchTerm(termName) {
           const searchInput = document.getElementById('searchInput');
           searchInput.value = termName;
           currentFilter.search = termName.toLowerCase();
           document.getElementById('clearSearch').style.display = 'block';
           filterTerms();
       }

       function getCategoryLabel(category) {
           const labels = {
               'fondamentaux': 'Fondamentaux',
               'machine-learning': 'ML',
               'deep-learning': 'Deep Learning',
               'generative': 'IA Générative',
               'business': 'Business'
           };
           return labels[category] || category;
       }

       function generateDifficulty(level) {
           let dots = '';
           for (let i = 1; i <= 3; i++) {
               dots += `<span class="difficulty-dot ${i <= level ? 'filled' : ''}"></span>`;
           }
           return dots;
       }

       function updateResultsInfo() {
           const resultsCount = document.getElementById('resultsCount');
           const total = glossaryTerms.length;
           const shown = currentTerms.length;
           
           if (currentFilter.search || currentFilter.letter !== 'all' || currentFilter.category !== 'all') {
               resultsCount.textContent = `${shown} résultat${shown > 1 ? 's' : ''} sur ${total}`;
           } else {
               resultsCount.textContent = `Affichage de tous les termes (${total})`;
           }
       }

       function updateStats() {
           document.getElementById('totalTerms').textContent = glossaryTerms.length;
           document.getElementById('viewCount').textContent = viewedTerms.size;
           
           const categories = new Set(glossaryTerms.map(t => t.category));
           document.getElementById('categoriesCount').textContent = categories.size;
       }

       function saveViewedTerms() {
           localStorage.setItem('glossaryViewed', JSON.stringify([...viewedTerms]));
       }

       function loadViewedTerms() {
           const saved = localStorage.getItem('glossaryViewed');
           if (saved) {
               viewedTerms = new Set(JSON.parse(saved));
           }
       }

       document.addEventListener('keydown', (e) => {
           if (e.key === 'Escape') {
               closeModal();
           }
       });

       document.getElementById('termModal').addEventListener('click', (e) => {
           if (e.target.id === 'termModal') {
               closeModal();
           }
       });
