---
// src/pages/blog/index.astro - VERSION MIGR√âE global.css v2
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ArticleCard from '../../components/ArticleCard.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="fr">
	<head>
		<BaseHead title={`Tous les articles - ${SITE_TITLE}`} description="Archive compl√®te des articles Prizm AI sur l'IA pour les PME et ETI" />
		<style>
			/* ==========================================================================
			   HEADER DU BLOG
			   ========================================================================== */
			.blog-header {
				text-align: center;
				padding: 3rem 0;
				margin-bottom: 3rem;
				background: linear-gradient(135deg, rgba(102,126,234,0.05), rgba(240,147,251,0.05));
			}
			
			.blog-title {
				font-size: 2.5rem;
				margin-bottom: 1rem;
				background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
			}
			
			.blog-description {
				font-size: var(--text-xl);
				color: #6b7280;
				max-width: 600px;
				margin: 0 auto 2rem;
			}
			
			.blog-stats {
				display: flex;
				justify-content: center;
				gap: 3rem;
				font-size: 0.95rem;
				color: #6b7280;
			}
			
			.stat-item {
				display: flex;
				align-items: center;
				gap: 0.5rem;
			}
			
			/* ==========================================================================
			   GRILLE DES ARTICLES - Simplifi√© (container-wide g√®re la largeur)
			   ========================================================================== */
			.articles-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
				gap: 2rem;
				padding-bottom: 5rem;
				
				/* üéØ Force toutes les cartes d'une ligne √† avoir la m√™me hauteur */
				grid-auto-rows: 1fr;
			}
			
			/* ==========================================================================
			   √âTAT VIDE
			   ========================================================================== */
			.empty-state {
				text-align: center;
				padding: 5rem 2rem;
				color: #6b7280;
				grid-column: 1 / -1;
			}
			
			.empty-icon {
				font-size: 4rem;
				margin-bottom: 1rem;
			}
			
			/* ==========================================================================
			   RESPONSIVE
			   ========================================================================== */
			@media (max-width: 767px) {
				.blog-title {
					font-size: 2rem;
				}
				
				.blog-stats {
					flex-direction: column;
					gap: 1rem;
				}
				
				/* Mobile : une seule colonne */
				.articles-grid {
					grid-template-columns: 1fr;
					gap: 1.5rem;
					padding-bottom: 3rem;
					
					/* Hauteurs naturelles sur mobile */
					grid-auto-rows: auto;
				}
			}
			
			/* Tablette */
			@media (min-width: 768px) and (max-width: 1024px) {
				.articles-grid {
					grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
					gap: 1.5rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		
		<!-- üéØ CHANGEMENT CL√â : Ajout de la classe container-wide -->
		<main class="container-wide">
			<!-- En-t√™te du blog -->
			<div class="blog-header">
				<h1 class="blog-title">Tous les articles</h1>
				<p class="blog-description">
					Archive compl√®te de nos analyses, guides et actualit√©s sur l'IA pour les PME/ETI
				</p>
				<div class="blog-stats">
					<div class="stat-item">
						üìö <span>{posts.length} article{posts.length > 1 ? 's' : ''}</span>
					</div>
					<div class="stat-item">
						üìÖ <span>Mis √† jour chaque semaine</span>
					</div>
					<div class="stat-item">
						‚è± <span>5-15 min de lecture</span>
					</div>
				</div>
			</div>

			<!-- Grille des articles -->
			<div class="articles-grid">
				{posts.length > 0 ? (
					posts.map((post) => (
						<ArticleCard
						title={post.data.title}
						description={post.data.description || 'D√©couvrez cet article sur l\'IA g√©n√©rative et son application en entreprise.'}
						category={post.data.category || 'lessentiel'}
						readingTime={post.data.readingTime || '5 min'}
						emoji={post.data.emoji || 'üìÑ'}
						image={post.data.heroImage || post.data.imageUrl || post.data.image}
						href={`/blog/${post.id.replace('.md', '')}/`}
						featured={post.data.featured || false}
						/>
					))
				) : (
					<div class="empty-state">
						<div class="empty-icon">üöÄ</div>
						<h2>Les articles arrivent bient√¥t !</h2>
						<p>Notre syst√®me IA pr√©pare du contenu de qualit√© pour vous.</p>
						<p style="margin-top: 2rem;">
							<a href="/" style="color: var(--color-primary); text-decoration: none; font-weight: var(--font-medium);">
								‚Üê Retour √† l'accueil
							</a>
						</p>
					</div>
				)}
			</div>
		</main>
		<Footer />
	</body>
</html>
