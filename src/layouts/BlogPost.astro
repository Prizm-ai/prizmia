---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

// ‚≠ê ROBUSTE : G√®re toutes les fa√ßons dont Astro peut passer les props
const propsData = Astro.props.data || Astro.props.content?.data || Astro.props.content || Astro.props;

const title = propsData.title;
const description = propsData.description;
const pubDate = propsData.pubDate;
const updatedDate = propsData.updatedDate;
const heroImage = propsData.heroImage;
const imageUrl = propsData.imageUrl;
const image = propsData.image;
const emoji = propsData.emoji || "üì∞";

// ‚≠ê DEBUG : Afficher ce qui est re√ßu
console.log('=== DEBUG BLOGPOST LAYOUT ===');
console.log('Astro.props:', Object.keys(Astro.props));
console.log('propsData keys:', Object.keys(propsData));
console.log('imageUrl:', imageUrl);
console.log('heroImage:', heroImage);
console.log('image:', image);
console.log('=============================');

// ‚≠ê FONCTION CORRIG√âE : Lit TOUTES les propri√©t√©s d'image dans l'ordre de priorit√©
function getImagePath(title, imageUrl, heroImage, image) {
  // 1. Priorit√© absolue : imageUrl (propri√©t√© explicite pour les articles g√©n√©r√©s)
  if (imageUrl) {
    console.log('‚úÖ Image trouv√©e via imageUrl:', imageUrl);
    return imageUrl;
  }
  
  // 2. Ensuite : heroImage (propri√©t√© Astro standard)
  if (heroImage) {
    console.log('‚úÖ Image trouv√©e via heroImage:', heroImage);
    return heroImage;
  }
  
  // 3. Ensuite : image (autre propri√©t√© standard)
  if (image) {
    console.log('‚úÖ Image trouv√©e via image:', image);
    return image;
  }
  
  // 4. Fallback : Mapping manuel SEULEMENT pour les anciens articles
  console.log('‚ö†Ô∏è  Aucune propri√©t√© image trouv√©e, utilisation du mapping manuel');
  const imageMap = {
    'manifeste': '/images/blog/manifeste-prizm-ai.jpg',
    'spectateurs': '/images/blog/manifeste-prizm-ai.jpg',
    'adoption': '/images/blog/adoption-ia-pme.jfif',
    'prospection': '/images/blog/prospection-commerciale.jfif',
    'avocats': '/images/blog/chatgpt-avocat.jfif',
    'contenu marketing': '/images/blog/contenu-marketing.jfif',
    'g√©n√©rative': '/images/blog/ia-generative.jfif',
    'service client': '/images/blog/chatgpt-service-client.jfif'
  };
  
  const titleLower = title ? title.toLowerCase() : '';
  for (const [keyword, imagePath] of Object.entries(imageMap)) {
    if (titleLower.includes(keyword)) {
      console.log('üîÑ Mapping manuel utilis√©:', imagePath);
      return imagePath;
    }
  }
  
  return null;
}

const imagePath = getImagePath(title, imageUrl, heroImage, image);
---

<html lang="fr">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      /* ==========================================================================
         STYLES SP√âCIFIQUES ARTICLE
         Note: La largeur est g√©r√©e par .container-narrow de global.css
         ========================================================================== */

      .hero-image-wrapper {
        width: 100%;
        margin: 2rem 0;
        border-radius: 1.5rem;
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        background: #f7fafc; /* Fond neutre si l'image ne charge pas */
        aspect-ratio: 16 / 9; /* Force le ratio 16:9 */
      }

      .hero-image {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Remplit le conteneur sans d√©formation */
        object-position: center;
        display: block;
      }

      .hero-placeholder {
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .emoji {
        font-size: 5rem;
        animation: float 3s ease-in-out infinite;
        color: white;
        text-shadow: 0 10px 20px rgba(0,0,0,0.2);
      }

      @keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-20px); }
      }

      .prose {
        width: 100%;
        max-width: 900px;
        margin: auto;
        padding: 1em;
        line-height: 1.8;
      }

      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1.3;
        font-size: 2.5rem;
        font-weight: 800;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .date {
        text-align: center;
        color: #6b7280;
        margin-bottom: 2rem;
        font-size: 0.9rem;
      }

      .last-updated-on {
        font-style: italic;
      }

      /* Styles pour le contenu */
      .prose :global(h2) {
        margin-top: 2.5rem;
        margin-bottom: 1.5rem;
        font-size: 1.8rem;
        font-weight: 700;
        color: #2d3748;
        position: relative;
        padding-left: 1rem;
      }

      .prose :global(h2:before) {
        content: "";
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 4px;
        height: 100%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 2px;
      }

      .prose :global(h3) {
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-size: 1.4rem;
        font-weight: 600;
        color: #4a5568;
      }

      .prose :global(p) {
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
        color: #4a5568;
      }

      .prose :global(ul), .prose :global(ol) {
        margin-bottom: 1.5rem;
        padding-left: 2rem;
      }

      .prose :global(li) {
        margin-bottom: 0.5rem;
        font-size: 1.05rem;
        color: #4a5568;
      }

      .prose :global(ul) {
        list-style-type: none;
      }

      .prose :global(ul li:before) {
        content: "‚ñ∏";
        color: #667eea;
        font-weight: bold;
        display: inline-block;
        width: 1.5rem;
        margin-left: -1.5rem;
      }

      .prose :global(ol) {
        counter-reset: list-counter;
        list-style-type: none;
      }

      .prose :global(ol li) {
        counter-increment: list-counter;
        position: relative;
      }

      .prose :global(ol li:before) {
        content: counter(list-counter) ".";
        color: #667eea;
        font-weight: bold;
        position: absolute;
        left: -1.5rem;
      }

      .prose :global(blockquote) {
        border-left: 4px solid #667eea;
        padding-left: 1.5rem;
        margin: 2rem 0;
        font-style: italic;
        color: #718096;
        background: linear-gradient(to right, rgba(102, 126, 234, 0.05), transparent);
        padding: 1.5rem;
        border-radius: 0.5rem;
      }

      .prose :global(a) {
        color: #667eea;
        text-decoration: none;
        border-bottom: 2px solid transparent;
        transition: border-color 0.3s ease;
      }

      .prose :global(a:hover) {
        border-bottom-color: #667eea;
      }

      .prose :global(strong) {
        font-weight: 600;
        color: #2d3748;
      }

      .prose :global(code) {
        background: #f7fafc;
        padding: 0.2rem 0.4rem;
        border-radius: 0.25rem;
        font-family: 'Monaco', 'Courier New', monospace;
        font-size: 0.9em;
        color: #764ba2;
      }

      .prose :global(pre) {
        background: #f7fafc;
        padding: 1.5rem;
        border-radius: 0.5rem;
        overflow-x: auto;
        margin: 2rem 0;
        border: 1px solid #e2e8f0;
      }

      .prose :global(pre code) {
        background: transparent;
        padding: 0;
        color: #2d3748;
      }

      /* Responsive */
      @media (max-width: 720px) {
        .title { font-size: 2rem; }
        .prose :global(h2) { font-size: 1.5rem; }
        .prose :global(h3) { font-size: 1.2rem; }
        .prose :global(p), .prose :global(li) { font-size: 1rem; }
        
        .emoji {
          font-size: 3rem;
        }
      }

      /* Animation d'entr√©e */
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .prose > * {
        animation: fadeIn 0.6s ease-out forwards;
        opacity: 0;
      }

      .prose > *:nth-child(1) { animation-delay: 0.1s; }
      .prose > *:nth-child(2) { animation-delay: 0.2s; }
      .prose > *:nth-child(3) { animation-delay: 0.3s; }
      .prose > *:nth-child(4) { animation-delay: 0.4s; }
      .prose > *:nth-child(5) { animation-delay: 0.5s; }
    </style>
  </head>

  <body>
    <Header />
    
    <!-- üéØ CHANGEMENT CL√â : Ajout de la classe container-narrow -->
    <main class="container-narrow">
      <article>
        <div class="prose">
          <h1 class="title">{title}</h1>
          <div class="date">
            {pubDate && <FormattedDate date={pubDate} />}
            {
              updatedDate && (
                <div class="last-updated-on">
                  Mis √† jour le <FormattedDate date={updatedDate} />
                </div>
              )
            }
          </div>

          <!-- Hero Section avec gestion propre des images -->
          <div class="hero-image-wrapper">
            {imagePath ? (
              <img 
                src={imagePath}
                alt={title}
                class="hero-image"
                loading="lazy"
                decoding="async"
              />
            ) : (
              <div class="hero-placeholder">
                <span class="emoji">{emoji}</span>
              </div>
            )}
          </div>

          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
