---
interface Props {
  date: Date | string | undefined;
}

const { date } = Astro.props;
// S'assurer que la date est valide
let dateToFormat: Date;
if (date) {
  dateToFormat = date instanceof Date ? date : new Date(date);
} else {
  dateToFormat = new Date();
}
---

<time datetime={dateToFormat.toISOString()}>
  {
    dateToFormat.toLocaleDateString('fr-FR', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  }
</time>