---
// ArticleCard V4 - Hauteurs Uniformes + Responsive
export interface Props {
  title: string;
  description: string;
  category: string;
  readingTime: string;
  emoji?: string;
  image?: string;
  href: string;
  featured?: boolean;
}

const { title, description, category, readingTime, emoji = "ðŸ“„", image, href, featured = false } = Astro.props;

const getCategoryStyle = (cat: string) => {
  const styles = {
    'lessentiel': { gradient: 'from-blue-400 to-purple-600', color: 'var(--color-primary)', label: 'ACTUALITÃ‰' },
    'guides': { gradient: 'from-green-400 to-teal-600', color: 'var(--color-guides)', label: 'GUIDE' },
    'analyses': { gradient: 'from-purple-400 to-pink-600', color: 'var(--color-analyses)', label: 'ANALYSE' },
    'outils': { gradient: 'from-orange-400 to-red-600', color: 'var(--color-outils)', label: 'RESSOURCE' },
    'default': { gradient: 'from-gray-400 to-gray-600', color: '#6b7280', label: 'ARTICLE' }
  };
  return styles[cat] || styles.default;
};

const categoryStyle = getCategoryStyle(category);
---

<article class={`article-card ${featured ? 'featured' : ''}`}>
  <a href={href} class="card-link">
    <div class="card-header">
      {image ? (
        <img src={image} alt={title} class="card-image" loading="lazy" />
      ) : (
        <div class={`gradient-bg bg-gradient-to-br ${categoryStyle.gradient}`}>
          <div class="emoji-container">
            <span class="emoji">{emoji}</span>
          </div>
        </div>
      )}
      <div class="category-float" style={`background: ${categoryStyle.color};`}>
        {categoryStyle.label}
      </div>
    </div>
    
    <div class="card-body">
      <div class="reading-time-badge">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <polyline points="12 6 12 12 16 14"></polyline>
        </svg>
        {readingTime}
      </div>
      
      <h3 class="card-title">{title}</h3>
      <p class="card-description">{description}</p>
      
      <div class="card-footer">
        <span class="read-more">
          DÃ©couvrir
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </span>
      </div>
    </div>
  </a>
</article>

<style>
  /* ==========================================================================
     CARTE PRINCIPALE - Hauteur 100% pour remplir la cellule grid
     ========================================================================== */
  .article-card {
    background: white;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    display: flex;
    flex-direction: column;
    position: relative;
    
    /* ðŸŽ¯ CLEF : Remplir toute la hauteur de la cellule grid */
    height: 100%;
  }
  
  /* Barre supÃ©rieure au survol */
  .article-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--color-primary), var(--color-primary-dark), #f093fb);
    transform: scaleX(0);
    transition: transform 0.4s ease;
    transform-origin: left;
  }
  
  .article-card:hover::before {
    transform: scaleX(1);
  }
  
  /* Animation survol */
  .article-card:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 20px 40px rgba(102,126,234,0.15);
  }
  
  /* Featured : occupe 2 colonnes sur desktop */
  .article-card.featured {
    grid-column: span 2;
  }
  
  /* Lien invisible qui remplit toute la carte */
  .card-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  /* ==========================================================================
     HEADER - Hauteur UNIFORME pour toutes les cartes
     ========================================================================== */
  .card-header {
    position: relative;
    /* ðŸŽ¯ Hauteur uniforme : 240px pour TOUTES les cartes */
    height: 240px;
    overflow: hidden;
    flex-shrink: 0; /* Ne pas rÃ©trÃ©cir */
  }
  
  /* Image hero */
  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
  
  /* Fond dÃ©gradÃ© si pas d'image */
  .gradient-bg {
    width: 100%;
    height: 100%;
    position: relative;
  }
  
  /* Container emoji */
  .emoji-container {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255,255,255,0.1);
    backdrop-filter: blur(10px);
  }
  
  /* Emoji animÃ© */
  .emoji {
    font-size: 80px;
    filter: drop-shadow(0 10px 20px rgba(0,0,0,0.2));
    animation: float 3s ease-in-out infinite;
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  
  /* Badge catÃ©gorie flottant */
  .category-float {
    position: absolute;
    top: 20px;
    left: 20px;
    color: white;
    padding: 8px 18px;
    border-radius: 30px;
    font-size: 11px;
    font-weight: var(--font-bold);
    letter-spacing: 1.5px;
    backdrop-filter: blur(10px);
    box-shadow: 0 8px 16px rgba(0,0,0,0.2);
  }
  
  /* ==========================================================================
     BODY - Flex pour occuper l'espace restant
     ========================================================================== */
  .card-body {
    padding: 28px;
    flex: 1; /* ðŸŽ¯ Occupe tout l'espace restant */
    display: flex;
    flex-direction: column;
    position: relative;
  }
  
  /* Badge temps de lecture */
  .reading-time-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    background: linear-gradient(135deg, #f0f4ff, #e8ecff);
    border-radius: 20px;
    font-size: 13px;
    font-weight: var(--font-semibold);
    color: var(--color-primary);
    margin-bottom: 16px;
    width: fit-content;
  }
  
  /* Titre */
  .card-title {
    font-size: 22px;
    font-weight: var(--font-extrabold);
    line-height: 1.3;
    margin-bottom: 14px;
    color: #1a202c;
    transition: color 0.3s;
  }
  
  .article-card:hover .card-title {
    color: var(--color-primary);
  }
  
  /* Description - Troncature 3 lignes */
  .card-description {
    font-size: 15px;
    line-height: 1.7;
    color: #64748b;
    margin-bottom: 20px;
    flex: 1; /* ðŸŽ¯ Pousse le footer en bas */
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Footer */
  .card-footer {
    padding-top: 20px;
    border-top: 2px solid #f1f5f9;
    margin-top: auto; /* ðŸŽ¯ Toujours en bas */
  }
  
  /* Lien "DÃ©couvrir" */
  .read-more {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--color-primary);
    font-weight: var(--font-bold);
    font-size: 14px;
    transition: all 0.3s;
    position: relative;
  }
  
  .read-more::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-primary);
    transition: width 0.3s;
  }
  
  .article-card:hover .read-more::after {
    width: 100%;
  }
  
  .article-card:hover .read-more {
    gap: 16px;
  }
  
  /* ==========================================================================
     GRADIENTS POUR CATÃ‰GORIES
     ========================================================================== */
  .bg-gradient-to-br {
    background: linear-gradient(135deg, var(--tw-gradient-from), var(--tw-gradient-to));
  }
  
  .from-blue-400 { --tw-gradient-from: #60a5fa; }
  .to-purple-600 { --tw-gradient-to: #9333ea; }
  .from-green-400 { --tw-gradient-from: #4ade80; }
  .to-teal-600 { --tw-gradient-to: #0d9488; }
  .from-purple-400 { --tw-gradient-from: #c084fc; }
  .to-pink-600 { --tw-gradient-to: #db2777; }
  .from-orange-400 { --tw-gradient-from: #fb923c; }
  .to-red-600 { --tw-gradient-to: #dc2626; }
  .from-gray-400 { --tw-gradient-from: #9ca3af; }
  .to-gray-600 { --tw-gradient-to: #4b5563; }
  
  /* ==========================================================================
     RESPONSIVE - Mobile garde hauteurs naturelles
     ========================================================================== */
  @media (max-width: 767px) {
    /* Mobile : header plus petit */
    .card-header {
      height: 200px;
    }
    
    /* Titre plus petit */
    .card-title {
      font-size: 20px;
    }
    
    /* Description plus compacte */
    .card-description {
      font-size: 14px;
      -webkit-line-clamp: 2;
    }
    
    /* Padding rÃ©duit */
    .card-body {
      padding: 20px;
    }
  }
  
  /* Tablette */
  @media (min-width: 768px) and (max-width: 1024px) {
    .card-title {
      font-size: 21px;
    }
  }
</style>
